<resources >
    <!-- Base application theme. -->
    <style name="Theme.CapstoneProjectNew" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cold_black</item>
        <item name="colorPrimaryVariant">@color/ice_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cold_black</item>
        <item name="colorSecondaryVariant">@color/ice_black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/grey</item>
    </style>
    <style name="ToolbarTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BackgroundColor">
        <item name="android:background">@color/cold_black</item>
    </style>
    <style name="CardColor">
        <item name="cardBackgroundColor">@color/cold_black</item>
    </style>
    <style name="BackgroundSearch">
        <item name="android:color">@color/ice_black</item>
    </style>
    <style name="TextQuery">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/orange</item>
        <item name="itemTextColor">@color/orange</item>
        <item name="android:background">@color/ice_black</item>

    </style>
</resources>